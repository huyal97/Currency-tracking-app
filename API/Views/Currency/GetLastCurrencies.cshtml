@model Infrastructure.Entities.Currencies

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="GetLastCurrencies">Verileri Güncelle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Currency Code
            </th>
            <th>
                Unit
            </th>
            <th>
                Currency Name
            </th>
            <th>
                Isim
            </th>
            <th>
                Forex Buying
            </th>
            <th>
                Forex Selling
            </th>
            <th>
                
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.currencyList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForexBuying)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForexSelling)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    window.setTimeout(function () {
        //refresh the page after 900,000 miliseconds (15 minutes)


        //reload the page (javascript has many ways of doing this)
        location.reload();
    }, 10000);</script>
